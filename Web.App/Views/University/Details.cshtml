@model University

@{
    Layout = "_Layout"; // Assuming you're using a layout file for global styling
}

<div class="container my-4">
    <h1 class="text-center mb-4">Деталі університету</h1>
    
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-center">@Model.Name</h2>
            
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Місто:</strong> @Model.City</p>
                    <p><strong>Дата заснування:</strong> @Model.FoundationDate</p>
                    <p><strong>Вебсайт:</strong> <a href="@Model.Website" target="_blank" class="text-primary">@Model.Website</a></p>
                </div>
                
                <div class="col-md-6 text-center">
                    <p><strong>Логотип:</strong></p>
                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                    {
                        <img src="@Model.LogoUrl" alt="@Model.Name Logo" class="img-fluid rounded shadow" style="max-width: 300px;"/>
                    }
                    else
                    {
                        <p>Логотип не доступний.</p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
